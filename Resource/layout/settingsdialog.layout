"resource/layout/settingsdialog.layout"
{
	styles
	{
		CDialogSettings {
			minimum-width=595
			minimum-height=585
			bgcolor=A2.Background
			render_bg {
				0="fill( x0 + 168, y0, x0 + 169, y1, A2.Divider )"
				1="fill( x0, y0, x1, y0 + 50, Focus )"
			}
			render {
				0="image_tiled( x0, y0 + 50, x1, y0 + 56, graphics/material/shadow )"
			}
		}

		SettingsList {
			selectedbgcolor=none
			selectedtextcolor=Focus
			font-size=18
		}

		PropertySheet { }
	}

	layout {
		place { control=frame_minimize,frame_close height=22 width=22 align=right margin-top=13 margin-right=19 spacing=0 }
		place { control=frame_captiongrip margin=2 width=max height=50 }

		region { name=buttons width=max height=40 align=bottom }
		region { name=body margin-bottom=50 margin-top=40 margin-left=18 margin-right=26 }

		place { control=settingslist region=body width=150 height=max }
		place { control=sheet start=settingslist region=body width=max height=max y=29 x=21 }
		place {
			control=okbutton,cancelbutton
			region=buttons
			align=right
			margin-right=26
			spacing=10
		}
	}
}
