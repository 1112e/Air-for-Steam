		place { control=ScreenshotActionLabel								dir=down start=ScreenshotHotKeySelector y=30 }
		place {
			control=ScreenshotNotifyCheck,ScreenshotPlaySoundCheck,ScreenshotSaveUncompressedCheck
			dir=down start=ScreenshotActionLabel y=5
		}

		place { control=SetScreenshotFolderButton						dir=down start=ScreenshotSaveUncompressedCheck y=10 }

		place { control=PingRateLabel												dir=down width=max start=SetScreenshotFolderButton y=30 }
		place { control=PingRateCombo												dir=down width=max start=PingRateLabel y=5 }

		place { control=Divider1,DescriptionLabel,TitleLabel,PingRateInfo height=0 width=0 }
	}
}
