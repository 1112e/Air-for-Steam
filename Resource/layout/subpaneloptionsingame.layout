{
	layout {
		place { control=EnableOverlayCheck									width=max margin-top=-4 }

		place { control=OverlayHomePageLabel								dir=down x=200 start=EnableOverlayCheck y=30 }
		place { control=OverlayHomePage											dir=down width=180 start=OverlayHomePageLabel y=5 }

		place { control=HotKeySelectorLabel									dir=down start=EnableOverlayCheck y=30 }
		place { control=HotKeySelector											dir=down width=180 start=HotKeySelectorLabel y=5 }

		place { control=ScreenshotLabel											dir=down start=HotKeySelector y=30 }
